<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/hello_world"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:onClick="onNewGameClicked" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:columnCount="3"
        android:id="@+id/table" >

        <ImageView
            android:id="@+id/felt1"
            android:scaleType="fitXY"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="@dimen/grid_field_margin"
            android:layout_marginBottom="@dimen/grid_field_margin"
            android:src="@drawable/blank" />
    <!-- NB: the layout_columnWeight and layout_rowWeight are only
         supported on API level 21 (Android 5.0) and above -->

        <ImageView
            android:id="@+id/felt2"
            android:scaleType="fitXY"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="@dimen/grid_field_margin"
            android:layout_marginBottom="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt3"
            android:scaleType="fitXY"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt4"
            android:scaleType="fitXY"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="@dimen/grid_field_margin"
            android:layout_marginBottom="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt5"
            android:scaleType="fitXY"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="@dimen/grid_field_margin"
            android:layout_marginBottom="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt6"
            android:scaleType="fitXY"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt7"
            android:scaleType="fitXY"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt8"
            android:scaleType="fitXY"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="@dimen/grid_field_margin"
            android:src="@drawable/blank" />

        <ImageView
            android:id="@+id/felt9"
            android:scaleType="fitXY"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/blank" />
    </GridLayout>
</LinearLayout>